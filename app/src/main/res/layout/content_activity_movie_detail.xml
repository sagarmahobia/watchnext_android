<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/movie_backdrop_image"
            android:layout_width="match_parent"
            android:layout_height="188dp"
            app:srcCompat="@drawable/ic_error_outline_black_24dp" />

        <ImageView
            android:id="@+id/movie_poster_image"
            android:layout_width="125dp"
            android:layout_height="188dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="160dp"
            app:srcCompat="@drawable/ic_error_outline_black_24dp" />

        <TextView
            android:id="@+id/movie_title"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/movie_backdrop_image"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/movie_poster_image"
            android:text="movie_title" />

        <TextView
            android:id="@+id/movie_year"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_below="@+id/movie_title"
            android:layout_alignStart="@+id/movie_title"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            android:text="movie_year" />

        <TextView
            android:id="@+id/movie_runtime"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignEnd="@+id/movie_title"
            android:layout_below="@+id/movie_title"
            android:layout_marginTop="10dp"
            android:text="movie_runtime" />

        <TextView
            android:id="@+id/movie_genres"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignStart="@+id/movie_title"
            android:layout_below="@+id/movie_year"
            android:layout_marginTop="10dp"
            android:text="movie_genres" />

        <TextView
            android:id="@+id/movie_overview"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_below="@id/movie_poster_image"
            android:layout_margin="10dp"
            android:text="movie_overview" />

    </RelativeLayout>

</ScrollView>