<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipe_refresh_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackgroundCard"
    tools:context=".activities.moviedetail.MovieDetailActivity">

    <ScrollView
        android:id="@+id/content_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                android:id="@+id/card_detail_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/colorBackgroundCardLight">

                <include layout="@layout/card_content_header" />

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/card_detail_header"
                app:cardBackgroundColor="@color/colorBackgroundCardDetail"
                app:contentPadding="5dp"
                app:contentPaddingBottom="10dp"
                app:contentPaddingTop="15dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/overview_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:layout_marginStart="10dp"
                        android:text="Overview"
                        android:textColor="@color/white"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/overview_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignEnd="@+id/overview_title"
                        android:layout_alignStart="@+id/overview_title"
                        android:layout_below="@+id/overview_title"
                        android:text="N/A"
                        android:textColor="@color/colorGrayText"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/original_title_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignEnd="@+id/overview_title"
                        android:layout_alignStart="@+id/overview_title"
                        android:layout_below="@+id/overview_text"
                        android:layout_marginTop="10dp"
                        android:text="Original Title"
                        android:textColor="@color/white"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/original_title_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignEnd="@+id/overview_title"
                        android:layout_alignStart="@+id/overview_title"
                        android:layout_below="@+id/original_title_title"
                        android:text="N/A"
                        android:textColor="@color/colorGrayText"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/original_language_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignEnd="@+id/overview_title"
                        android:layout_alignStart="@+id/overview_title"
                        android:layout_below="@+id/original_title_text"
                        android:layout_marginTop="10dp"
                        android:text="Original Language"
                        android:textColor="@color/white"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/original_language_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignEnd="@+id/overview_title"
                        android:layout_alignStart="@+id/overview_title"
                        android:layout_below="@+id/original_language_title"
                        android:text="N/A"
                        android:textColor="@color/colorGrayText"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/status_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignEnd="@+id/overview_title"
                        android:layout_alignStart="@+id/overview_title"
                        android:layout_below="@+id/original_language_text"
                        android:layout_marginTop="10dp"
                        android:text="Status"
                        android:textColor="@color/white"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/status_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignEnd="@+id/overview_title"
                        android:layout_alignStart="@+id/overview_title"
                        android:layout_below="@+id/status_title"
                        android:text="N/A"
                        android:textColor="@color/colorGrayText"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/release_date_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignEnd="@+id/overview_title"
                        android:layout_alignStart="@+id/overview_title"
                        android:layout_below="@+id/status_text"
                        android:layout_marginTop="10dp"
                        android:text="Release Date"
                        android:textColor="@color/white"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/release_date_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignEnd="@+id/overview_title"
                        android:layout_alignStart="@+id/overview_title"
                        android:layout_below="@+id/release_date_title"
                        android:text="N/A"
                        android:textColor="@color/colorGrayText"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/budget_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignEnd="@+id/overview_title"
                        android:layout_alignStart="@+id/overview_title"
                        android:layout_below="@+id/release_date_text"
                        android:layout_marginTop="10dp"
                        android:text="Budget"
                        android:textColor="@color/white"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/budget_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignEnd="@+id/overview_title"
                        android:layout_alignStart="@+id/overview_title"
                        android:layout_below="@+id/budget_title"
                        android:text="N/A"
                        android:textColor="@color/colorGrayText"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/revenue_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignEnd="@+id/overview_title"
                        android:layout_alignStart="@+id/overview_title"
                        android:layout_below="@+id/budget_text"
                        android:layout_marginTop="10dp"
                        android:text="Revenue"
                        android:textColor="@color/white"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/revenue_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignEnd="@+id/overview_title"
                        android:layout_alignStart="@+id/overview_title"
                        android:layout_below="@+id/revenue_title"
                        android:text="N/A"
                        android:textColor="@color/colorGrayText"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/production_companies_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignEnd="@+id/overview_title"
                        android:layout_alignStart="@+id/overview_title"
                        android:layout_below="@+id/revenue_text"
                        android:layout_marginTop="10dp"
                        android:text="Production Companies"
                        android:textColor="@color/white"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/production_companies_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignEnd="@+id/overview_title"
                        android:layout_alignStart="@+id/overview_title"
                        android:layout_below="@+id/production_companies_title"
                        android:text="N/A"
                        android:textColor="@color/colorGrayText"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/homepage_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignEnd="@+id/overview_title"
                        android:layout_alignStart="@+id/overview_title"
                        android:layout_below="@+id/production_companies_text"
                        android:layout_marginTop="10dp"
                        android:text="Homepage"
                        android:textColor="@color/white"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/homepage_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignEnd="@+id/overview_title"
                        android:layout_alignStart="@+id/overview_title"
                        android:layout_below="@+id/homepage_title"
                        android:text="N/A"
                        android:textColor="@color/colorGrayText"
                        android:textSize="14sp" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_alignEnd="@+id/overview_title"
                        android:layout_alignStart="@+id/overview_title"
                        android:layout_below="@id/homepage_text"
                        android:layout_marginTop="10dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_tmdb_logo" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>
        </RelativeLayout>
    </ScrollView>
</android.support.v4.widget.SwipeRefreshLayout>