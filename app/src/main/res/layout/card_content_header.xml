<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:paddingBottom="10dp"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/backdrop_image"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:contentDescription="Backdrop Image" />

    <ImageView
        android:id="@+id/poster_image"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:layout_below="@+id/backdrop_image"
        android:layout_marginStart="20dp"
        android:layout_marginTop="-20dp"
        android:contentDescription="Poster Image" />

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/backdrop_image"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@+id/poster_image"
        android:gravity="center_vertical|start"
        android:textColor="#fff"
        android:textSize="22sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/title"
        android:layout_below="@+id/title"
        android:layout_marginTop="5dp"
        android:textColor="#fff"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/runtime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/year"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/year"
        android:textColor="#fff"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/genres"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/title"
        android:layout_alignStart="@+id/title"
        android:layout_below="@+id/year"
        android:layout_marginTop="5dp"
        android:textColor="#fff"
        android:textSize="12sp" />

</RelativeLayout>